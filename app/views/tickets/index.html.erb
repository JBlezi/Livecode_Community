<div class="container">
  <div>
    <h1><strong>Tickets</strong></h1>
    <br>
    <p>Raise a ticket - kit your code</p>
    <%= link_to "Raise Ticket", new_ticket_path, class: "btn standart-button" %>
    <hr>
    <br>
  </div>

  <div class="search d-flex m-0">
    <div>
      <%= form_tag tickets_path, method: :get, class: "d-flex search-bar" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search Tickets"
        %>
        <%= submit_tag "Search", class: "btn outline-button" %>
      <% end %>
    </div>
  </div>

  <div class="index-container">
    <% @tickets.reverse_each do |ticket| %>
      <% if ticket.status == "open" %>
        <div class="ticket-link" id="open">
          <div class="ticket">
            <div class="top-area">
              <%= render 'modalcard', ticket: ticket %>
              <a style="float: right;" data-bs-toggle="modal" data-bs-target="#ticket-modal-<%=ticket.id%>">
                <p><%= ticket.user.email %></p>
                <h2><%= ticket.title %></h2>
              </a>
            </div>
            <div class="bottom-area">

              <div class="bottom-left">
                <% if policy(ticket).edit? %>
                  <%= render 'modal', ticket: ticket %>
                  <a style="float: right;" class="btn tiny-button" data-bs-toggle="modal" data-bs-target="#ticket-modal-edit-<%=ticket.id%>"><i class="fa-solid fa-pen-to-square"></i></a>

                  <%# <%= link_to "Edit this ticket", edit_ticket_path(ticket), class: "btn  outline-button" %>
                <% end %>
                <% if policy(ticket).destroy? %>
                  <%= link_to ticket_path(ticket), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn tiny-button" do %>
                    <i class="fa-solid fa-trash"></i>
                  <% end %>
                <% end %>
              </div>

              <div class="bottom-right">
                <p><%= ticket.language %></p>
              </div>
            </div>
          </div>
        </div>

      <% elsif ticket.status == "in_progress" %>
        <div class="ticket-link" id="in_progress">
          <div class="ticket">
            <div class="top-area">
              <%= render 'modalcard', ticket: ticket %>
              <a style="float: right;" data-bs-toggle="modal" data-bs-target="#ticket-modal-<%=ticket.id%>">
                <p><%= ticket.user.email %></p>
                <h2><%= ticket.title %></h2>
              </a>
            </div>
            <div class="bottom-area">

              <div class="bottom-left">
                <% if policy(ticket).edit? %>
                  <%= render 'modal', ticket: ticket %>
                  <a style="float: right;" class="btn tiny-button" data-bs-toggle="modal" data-bs-target="#ticket-modal-edit-<%=ticket.id%>"><i class="fa-solid fa-pen-to-square"></i></a>

                  <%# <%= link_to "Edit this ticket", edit_ticket_path(ticket), class: "btn  outline-button" %>
                <% end %>
                <% if policy(ticket).destroy? %>
                  <%= link_to ticket_path(ticket), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn tiny-button" do %>
                    <i class="fa-solid fa-trash"></i>
                  <% end %>
                <% end %>
              </div>

              <div class="bottom-right">
                <p><%= ticket.language %></p>
              </div>
            </div>
          </div>
        </div>

        <% else %>
        <div class="ticket-link" id="closed">
          <div class="ticket">
            <div class="top-area">
              <%= render 'modalcard', ticket: ticket %>
              <a style="float: right;" data-bs-toggle="modal" data-bs-target="#ticket-modal-<%=ticket.id%>">
                <p><%= ticket.user.email %></p>
                <h2><%= ticket.title %></h2>
              </a>
            </div>
            <div class="bottom-area">

              <div class="bottom-left">
                <% if policy(ticket).edit? %>
                  <%= render 'modal', ticket: ticket %>
                  <a style="float: right;" class="btn tiny-button" data-bs-toggle="modal" data-bs-target="#ticket-modal-edit-<%=ticket.id%>"><i class="fa-solid fa-pen-to-square"></i></a>

                  <%# <%= link_to "Edit this ticket", edit_ticket_path(ticket), class: "btn  outline-button" %>
                <% end %>
                <% if policy(ticket).destroy? %>
                  <%= link_to ticket_path(ticket), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn tiny-button" do %>
                    <i class="fa-solid fa-trash"></i>
                  <% end %>
                <% end %>
              </div>

              <div class="bottom-right">
                <p><%= ticket.language %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
